{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-tailwindcss"
    ],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "layer"
                ]
            }
        ],
        "no-descending-specificity": null,
        "selector-class-pattern": null,
        "custom-property-pattern": null
    }
}

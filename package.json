{
  "name": "mesmeric-commerce",
  "version": "1.0.0",
  "description": "A modern, feature-rich enhancement suite for WooCommerce with HTMX, Alpine.js, and Vue.js integration",
  "scripts": {
    "update-dependencies": "npm update",
    "install-dependencies": "npm install",
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "build:tailwind": "tailwindcss -i ./src/css/tailwind.css -o ./admin/css/tailwind.min.css --minify && tailwindcss -i ./src/css/tailwind.css -o ./public/css/tailwind.min.css --minify"
  },
  "author": "Bean Bag Planet",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@vue/compiler-sfc": "^3.4.15",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.10.0",
    "daisyui": "^5.0.0",
    "laravel-mix": "^6.0.49",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "sass": "^1.70.0",
    "sass-loader": "^14.1.0",
    "tailwindcss": "^4.0.0",
    "vue-loader": "^17.4.2"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "htmx.org": "^2.0.0",
    "vue": "^3.4.15"
  }
}

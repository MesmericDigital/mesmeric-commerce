{
    "name": "mesmeric-commerce",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">= 18.12.0"
    },
    "description": "A modern, feature-rich enhancement suite for WooCommerce with HTMX, Alpine.js, and Vue.js integration",
    "scripts": {
        "update-dependencies": "npm update & composer update",
        "install-dependencies": "npm install && composer install",
        "dev": "vite",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "vite build",
        "build:tailwind": "tailwindcss -i ./src/css/tailwind.css -o ./admin/css/tailwind.min.css --minify && tailwindcss -i ./src/css/tailwind.css -o ./public/css/tailwind.min.css --minify"
    },
    "author": "Bean Bag Planet",
    "license": "GPL-2.0-or-later",
    "devDependencies": {
        "vite": "^5.0.0",
        "@babel/core": "^7.26.9",
        "@babel/preset-env": "^7.26.9",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "@vue/compiler-sfc": "^3.5.13",
        "autoprefixer": "^10.4.20",
        "babel-loader": "^9.2.1",
        "css-loader": "^7.1.2",
        "daisyui": "^5.0.0-beta.8",
        "laravel-mix": "^6.0.49",
        "postcss": "^8.5.3",
        "postcss-import": "^16.1.0",
        "sass": "^1.85.0",
        "sass-loader": "^16.0.5",
        "tailwindcss": "^4.0.7",
        "vue-loader": "^17.4.2"
    },
    "dependencies": {
        "alpinejs": "^3.14.8",
        "htmx.org": "^2.0.4",
        "vue": "^3.5.13"
    }
}

{#
 # Template for reasons to buy list.
 #
 # @var reasons array List of reason groups
 # @var settings array Module settings
 # @var product WC_Product Product object
 #}

<div class="mesmeric-reasons-list" 
     x-data="reasonsToBuy"
     x-show="isVisible"
     x-transition:enter="transition ease-out duration-200"
     x-transition:enter-start="opacity-0 transform -translate-y-2"
     x-transition:enter-end="opacity-100 transform translate-y-0">

    {% for group in reasons %}
        <div class="reason-group mb-6 last:mb-0">
            {% if group.title %}
                <h3 class="text-lg font-semibold mb-3">{{ group.title|e }}</h3>
            {% endif %}

            <ul class="space-y-2">
                {% for item in group.items %}
                    <li class="flex items-start">
                        {% if settings.display_icon %}
                            <span class="flex-shrink-0 w-5 h-5 mr-2 text-primary">
                                {{ settings.icon_type == 'check2' ? icons.check2|raw : icons.check3|raw }}
                            </span>
                        {% endif %}
                        <span class="text-base-content">{{ item|translate|e }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
</div>
